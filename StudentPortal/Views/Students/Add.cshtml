@model StudentPortal.Models.ViewModels.AddStudentViewModel

<h1>Add Student</h1>

<form class="row g-3" method="post" asp-action="Create">
   
    <input type="hidden" asp-for="Id" />

    <div class="col-12">
        <label for="std_name" class="form-label">Name</label>
        <input type="text" class="form-control" id="std_name" placeholder="Enter Name" asp-for="Name">
    </div>

    <div class="col-12">
        <label for="std_emai" class="form-label">Email</label>
        <input type="text" class="form-control" id="std_email" placeholder="Enter E-mail" asp-for="Email">
    </div>

    <div class="col-12">
        <label for="std_phone" class="form-label">Phone Number</label>
        <input type="text" class="form-control" id="std_phone" placeholder="Enter Phone Number" asp-for="PhoneNumber">
    </div>

    <div class="col-12">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="is_subscribed" asp-for="Subscribed">
            <label class="form-check-label" for="is_subscribed">
                Is Subscribed
            </label>
        </div>
    </div>

    <div class="col-12">
        @if (Model == null)
        {
            <button type="submit" class="btn btn-primary">Save</button>
        }
        else
        {
            <button type="submit" class="btn btn-primary">Update</button>
        }
    </div>

</form>